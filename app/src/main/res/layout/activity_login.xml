<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo con imagen -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back_login"
        android:contentDescription="Fondo" />

    <!-- Contenido encima del fondo -->
    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/logo_unu"
            android:contentDescription="Logo de la app" />

        <!-- Cuadro blanco del login con bordes redondeados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_margin="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:elevation="6dp"
            android:background="@drawable/rounded_card_background">

            <!-- EditText Código -->
            <EditText
                android:id="@+id/etCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:hint="Código del estudiante"
                android:inputType="number"
                android:maxLength="10"
                android:layout_marginBottom="16dp" />

            <!-- EditText Contraseña -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:maxLength="20"
                android:layout_marginBottom="24dp" />

            <!-- Botón Iniciar sesión -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Iniciar Sesión"
                android:textAllCaps="false"
                android:backgroundTint="@color/green_translucent"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
