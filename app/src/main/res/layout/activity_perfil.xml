<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Contenido desplazable del perfil -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Imagen de perfil circular -->
            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_perfil"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:padding="4dp"
                android:contentDescription="Foto de perfil" />

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chofer Jans"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#212121"
                android:layout_marginTop="12dp" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tvRol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conductor principal"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="24dp" />

            <!-- Cuadro de datos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_background"
                android:padding="20dp"
                android:elevation="4dp">

                <!-- DNI -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_creditcard"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvDNIs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DNI: 758600987"
                        android:textSize="16sp"
                        android:textColor="#424242" />
                </LinearLayout>

                <!-- Código -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_barcode"
                        android:tint="#9C27B0"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvCodigos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Código: 1234"
                        android:textSize="16sp"
                        android:textColor="#424242" />
                </LinearLayout>

                <!-- Teléfono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        android:tint="#FF9800"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvTelefonos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teléfono: 929292929"
                        android:textSize="16sp"
                        android:textColor="#424242" />
                </LinearLayout>

                <!-- Rol -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_rol"
                        android:tint="#795548"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rol: chofer"
                        android:textSize="16sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botón Agregar Chofer -->
            <Button
                android:id="@+id/btnAgregarChofer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Chofer"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3F51B5"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:drawableStart="@drawable/ic_add"
                android:padding="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation fijo -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationChofer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/menu_bottom_chofer"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/selector_bottom_nav"
        app:itemTextColor="@color/selector_bottom_nav" />
</LinearLayout>
