<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Campo para el código del chofer -->
        <EditText
            android:id="@+id/etCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código del chofer"
            android:inputType="number"
            android:maxLength="10" />

        <!-- Campo para el nombre del chofer -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del chofer"
            android:inputType="text" />

        <!-- Campo para la contraseña -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <!-- Botón para registrar el chofer -->
        <Button
            android:id="@+id/btnRegistrarChofer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Chofer" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
