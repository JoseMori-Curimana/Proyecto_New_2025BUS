<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainAlumno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Imagen de perfil -->
            <ImageView
                android:id="@+id/imgPerfilAlumno"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_perfil"
                android:layout_marginBottom="16dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:padding="6dp"
                android:contentDescription="Foto de perfil" />

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombreAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Alumno"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <!-- Rol -->
            <TextView
                android:id="@+id/tvRolAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estudiante"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="24dp" />

            <!-- Caja de datos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_background"
                android:padding="20dp"
                android:elevation="4dp">

                <!-- DNI -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_creditcard"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="12dp" />
                    <TextView
                        android:id="@+id/tvDniAlumno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DNI: "
                        android:textSize="16sp"
                        android:textColor="#424242" />
                </LinearLayout>

                <!-- Código -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_barcode"
                        android:tint="#9C27B0"
                        android:layout_marginEnd="12dp" />
                    <TextView
                        android:id="@+id/tvCodigoAlumno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Código: "
                        android:textSize="16sp"
                        android:textColor="#424242" />
                </LinearLayout>

                <!-- Teléfono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        android:tint="#FF9800"
                        android:layout_marginEnd="12dp" />
                    <TextView
                        android:id="@+id/tvTelefonoAlumno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teléfono: "
                        android:textSize="16sp"
                        android:textColor="#424242" />
                </LinearLayout>

                <!-- Correo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:tint="#03A9F4"
                        android:layout_marginEnd="12dp" />
                    <TextView
                        android:id="@+id/tvCorreoAlumno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correo: "
                        android:textSize="16sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
