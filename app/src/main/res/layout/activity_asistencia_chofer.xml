<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="56dp"> <!-- espacio para el menú -->

        <!-- Título -->
        <TextView
            android:id="@+id/txtTituloAsistencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar asistencia"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Grilla de asientos -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridAsientos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:columnCount="6"
            app:rowCount="5"
            app:alignmentMode="alignMargins"
            app:useDefaultMargins="true" />
    </LinearLayout>

    <!-- Menú inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationChofer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/menu_bottom_chofer"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/selector_bottom_nav"
        app:itemTextColor="@color/selector_bottom_nav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
